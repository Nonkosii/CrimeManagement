@model Suspect

<h2 class="text-center">Edit Suspect</h2>
    <div class="container-fluid">
        <div class="row">
        <form method="post" class="mt-5" action="@Url.Action("Edit", "Suspect")">
                    <input asp-for="SuspectNo" hidden />
                    <input type="hidden" name="returnUrl" value="@Context.Request.Headers["Referer"]" />
                        <div class="row mb-3">
                            <label asp-for="SuspectId" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="SuspectId" class="form-control">
                                <span asp-validation-for="SuspectId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="FirstName" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="FirstName" class="form-control">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="LastName" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="LastName" class="form-control">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

            <div class="row mt-3 justify-content-center">
                <button type="submit" class="btn btn-primary mr-2" style="width:150px">Update</button>
                <a href="@Context.Request.Headers["Referer"]" class="btn btn-secondary border" style="width:150px">Back</a>
                @* <button type="button" class="btn btn-secondary border" style="width:150px" onclick="goBack()">Back</button> *@
            </div>

                    
                </form>
        </div>
    </div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
