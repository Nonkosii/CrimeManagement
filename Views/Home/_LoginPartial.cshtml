@using CrimeManagement.Data
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        

        <div class="row mt-3 justify-content-center">
            <a class="btn btn-primary mr-3" style="width: auto; min-width: 100px;" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>

            <a class="btn btn-secondary ml-3" style="width:auto; min-width: 100px;" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            
        </div>

    }
</ul>
